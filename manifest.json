{
  "name": "Handwritingfy",
  "description": "Make the webpages appear in a handwritten style.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "/src/popup.html",
    "default_icon": {
      "16": "/images/logo.png",
      "32": "/images/logo.png",
      "48": "/images/logo.png",
      "128": "/images/logo.png"
    }
  },
  "icons": {
    "16": "/images/logo.png",
    "32": "/images/logo.png",
    "48": "/images/logo.png",
    "128": "/images/logo.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle",
      "js": [
        "/src/prepareFonts.js",
        "/src/handwritingfy.js"
      ]
    }
  ]
}